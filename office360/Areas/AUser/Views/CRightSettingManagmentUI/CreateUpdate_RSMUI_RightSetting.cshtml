
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>@ViewBag.Title</h4>
                </div>
            </div>
            <nav class="breadcrumb-one" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">User</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Right Setting Management</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><span>@ViewBag.Title</span></li>
                </ol>
            </nav>
        </div>
    </div>
    <form>
        @if (ViewBag.DB_OperationType == nameof(office360.Models.General.DBListCondition.DB_OperationType.UPDATE_DATA_INTO_DB))
        {

            <div class="card" style="margin-top:1%;width:100%">
                <div class="card-body">
                    <div class="row mb-0">
                        <div class="col-sm-12 col-md-8">
                            <div class="form-group">
                                @Html.Label("Right Setting ( For Edit )", new { @class = "col-form-label", @for = "DropDownListRightSetting" })
                                @Html.DropDownList("DropDownListRightSetting", Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @data_toggle = "select2", id = "DropDownListRightSetting" })
                                <button type="button" class="btn btn-info" id="ButtonSubmitGetInfoForEdit">
                                    <i class="fa fa-sync-alt"></i> Load Information
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="card" style="margin-top:1%;width:100%">
            <div class="card-body">
                <h3 style="font-family: 'Bahnschrift'; font-weight: bolder; color: navy">Right Setting's Detail</h3>
                <div class="row mb-0">
                    <div class="col-sm-12 col-md-4">
                        <div class="form-group">
                            @Html.Label("Right", new { @class = "col-form-label", @for = "DropDownListRight" })
                            @Html.DropDownList("DropDownListRight", Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @data_toggle = "select2", id = "DropDownListRight" })
                        </div>
                    </div>
                </div>
                <div class="row mb-0">
                    <div class="col-sm-12 col-md-10">
                        <div class="form-group">
                            @Html.Label("Description (URL Path)", new { @class = "col-form-label", @for = "TextBoxDescription" })
                            <div class="input-group-prepend">
                                <span class="input-group-text">Area</span>
                                @Html.TextBox("TextBoxArea", null, new { @class = "form-control col-md-4", placeholder = "Please Enter Area Here!", @id = "TextBoxArea" })
                                <span class="input-group-text">Controller</span>
                                @Html.TextBox("TextBoxController", null, new { @class = "form-control col-md-4", placeholder = "Please Enter Controller Here!", @id = "TextBoxController" })
                                <span class="input-group-text">View</span>
                                @Html.TextBox("TextBoxView", null, new { @class = "form-control col-md-4", placeholder = "Please Enter View Here!", @id = "TextBoxView" })


                            </div>

                        </div>
                    </div>
                </div>
                <div class="row mb-0">
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            @Html.Label("URL Type", new { @class = "col-form-label", @for = "DropDownListURLType" })
                            @Html.DropDownList("DropDownListURLType", Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @data_toggle = "select2", id = "DropDownListURLType" })
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            @Html.Label("Company", new { @class = "col-form-label", @for = "DropDownListCompany" })
                            @Html.DropDownList("DropDownListCompany", Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @data_toggle = "select2", id = "DropDownListCompany" })
                        </div>
                    </div>
                </div>
                <div class="row mb-0">

                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            @Html.Label("Remarks", new { @class = "col-form-label", @for = "TextBoxRemarks" })
                            @Html.TextBox("TextBoxRemarks", null, new { @class = "form-control", placeholder = "Please Enter Remarks Here!", @id = "TextBoxRemarks" })
                        </div>
                    </div>
                </div>

            </div>
        </div>
        @Html.TextBox("HiddenFieldRightSettingGuID", null, new { @class = "form-control", Value = ViewBag.UserGuID, hidden = true, @id = "HiddenFieldRightSettingGuID" })
        @Html.TextBox("HiddenFieldDB_OperationType", null, new { @class = "form-control", Value = ViewBag.DB_OperationType, hidden = true, @id = "HiddenFieldDB_OperationType" })

    </form>

}
<script src="~/Areas/AUser/Script/CRightSettingManagmentUI_Script/CreateUpdate_RSMUI_RightSetting.js"></script>