@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>@ViewBag.Title</h4>
                </div>
            </div>
            <nav class="breadcrumb-one" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="javascript:void(0);"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="javascript:void(0);">Academic</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="javascript:void(0);">Curriculum</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <span>@ViewBag.Title</span>
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <form>
        @if (ViewBag.DB_OperationType == nameof(office360.Models.General.DB_OperationType.UPDATE_DATA_INTO_DB))
        {
            <div class="card" style="margin-top:1%;width:100%">
                <div class="card-body">
                    <div class="row mb-0">
                        <div class="col-sm-12 col-md-8">
                            <div class="form-group">
                                @Html.Label("Class Curriculum ( For Edit )", new { @class = "col-form-label", @for = "DropDownListClassCurriculum" })
                                @Html.DropDownList("DropDownListClassCurriculum", Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @data_toggle = "select2", id = "DropDownListClassCurriculum" })
                                <button type="button" class="btn btn-info" id="ButtonSubmitGetInfoForEdit">
                                    <i class="fa fa-sync-alt"></i> Load Information
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="card" style="margin-top:1%;width:100%">
            <div class="card-body">
                <h3 style="font-family: 'Bahnschrift'; font-weight: bolder; color: navy">Class Curriculum Detail</h3>
                <div class="row mb-0">
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            @Html.Label("Campus", new { @class = "col-form-label", @for = "DropDownListCampus" })
                            @Html.DropDownList("DropDownListCampus", Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @data_toggle = "select2", id = "DropDownListCampus" })
                        </div>
                    </div>
                </div>
                <div class="row mb-0">
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            @Html.Label("Description", new { @class = "col-form-label", @for = "TextBoxDescription" })
                            @Html.TextBox("TextBoxDescription", null, new { @class = "form-control", placeholder = "Please Enter Description Here!", @id = "TextBoxDescription" })
                        </div>
                    </div>
                </div>
                <div class="row mb-0">
                    <div class="col-sm-12 col-md-8">
                        <div class="form-group">
                            @Html.Label("Class", new { @class = "col-form-label", @for = "DropDownListClass" })
                            @Html.DropDownList("DropDownListClass", Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @data_toggle = "select2", id = "DropDownListClass" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card" style="margin-top:1%;width:100%">
            <div class="card-body">
                <div class="form-inline mb-0">
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            @Html.Label("Semester", new { @class = "col-form-label", @for = "DropDownListSemester" })
                            @Html.DropDownList("DropDownListSemester", Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @data_toggle = "select2", id = "DropDownListSemester" })
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            @Html.Label("Subject", new { @class = "col-form-label", @for = "DropDownListSubject" })
                            @Html.DropDownList("DropDownListSubject", Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @data_toggle = "select2", id = "DropDownListSubject", multiple = true })
                        </div>
                    </div>
                    <input type="button" class="btn btn-danger" id="ButtonAddDataIntoTable" value="+" />
                </div>
                <div class="bootstrap-admin-panel-content">
                    <table class="table table-bordered table-sm order-column stripe table-hover" style="width: 100%" id="MainTableACCM_ClassCurriculum">
                        <tbody id="MainTableACCM_ClassCurriculum"></tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card" style="margin-top:1%;width:100%">
            <div class="card-body">
                <div class="row mb-0">
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            @Html.Label("Remarks", new { @class = "col-form-label", @for = "TextBoxRemarks" })
                            @Html.TextBox("TextBoxRemarks", null, new { @class = "form-control", placeholder = "Please Enter Remarks Here!", @id = "TextBoxRemarks" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @Html.TextBox("HiddenFieldClassCurriculumGuID", null, new { @class = "form-control", Value = ViewBag.ClassCurriculumGuID, hidden = true, @id = "HiddenFieldClassCurriculumGuID" })
        @Html.TextBox("HiddenFieldDB_OperationType", null, new { @class = "form-control", Value = ViewBag.DB_OperationType, hidden = true, @id = "HiddenFieldDB_OperationType" })

    </form>
    <div class="card-footer">
        <div class="col-sm-12 form-group">
            <div class="card-heading" id="DivButtonSubmitDown" style="display:none">
                <input type="button" class="btn btn-info" id="ButtonSubmitDown" value="Sumbit" />
                <i class="fa fa-arrow-up"></i>
            </div>
            <div class="card-heading" id="DivButtonUpdateDown" style="display:none">
                <input type="button" class="btn btn-warning" id="ButtonUpdateDown" value="Update" />
                <i class="fa fa-arrow-up"></i>
            </div>
        </div>
    </div>

}


<script src="~/Areas/AAcademic/Script/CAcademicClassCurriculumManagmentUI_Script/CreateUpdate_ACCMUI_ClassCurriculum.js"></script>